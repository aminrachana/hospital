@model Hospital_CMS.Models.RoomDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Delete Room</h2>

<h2>Are you sure you want to delete this Patient?</h2>
<button type="submit" style=" border-radius: 5px;"><a style="color:#000000;" href="/Patient/List">Cancel</a></button>

<h1>@Model.RoomId. @Model.RoomNo</h1>

<form action="/Room/Delete/@Model.RoomId" method="POST">
    <input type="submit" value="Confirm Delete" style="background: #ff0000; border-radius: 5px; color: #000000;" />
</form>

